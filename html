    <!-- Success & Confirmation Messages -->
    <div id="success-message" class="fixed top-5 right-5 bg-green-500 text-white py-3 px-6 rounded-lg shadow-lg hidden transform transition-transform duration-500 translate-x-full"><p>ุชู ุฅุถุงูุฉ ุงูููุชุฌ ููุณูุฉ ุจูุฌุงุญ!</p></div>
    <div id="order-confirmation" class="fixed top-5 right-5 bg-blue-500 text-white py-3 px-6 rounded-lg shadow-lg hidden transform transition-transform duration-500 translate-x-full"><p>ุชู ุงุณุชูุงู ุทูุจู ุจูุฌุงุญ! ุณูุชูุงุตู ูุนู ูุฑูุจุงู.</p></div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const productList = document.getElementById('product-list');
            const loadingSpinner = document.getElementById('loading-spinner');
            const cartButton = document.getElementById('cart-button');
            const cartModal = document.getElementById('cart-modal');
            const closeCartButton = document.getElementById('close-cart-button');
            const cartCount = document.getElementById('cart-count');
            const cartItemsContainer = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            const checkoutButton = document.getElementById('checkout-button');
            const checkoutModal = document.getElementById('checkout-modal');
            const closeCheckoutButton = document.getElementById('close-checkout-button');
            const checkoutForm = document.getElementById('checkout-form');
            const successMessage = document.getElementById('success-message');
            const orderConfirmation = document.getElementById('order-confirmation');

            let cart = [];
            let productsData = []; // To store product info for the cart

            // ** NEW: Function to load products dynamically **
            async function loadProducts() {
                let i = 1;
                let productsFound = false;
                while (true) {
                    try {
                        const response = await fetch(`products/${i}.html`);
                        if (response.ok) {
                            const productHTML = await response.text();
                            productList.insertAdjacentHTML('beforeend', productHTML);
                            productsFound = true;
                            i++;
                        } else {
                            // Stop when a file is not found (404 error)
                            break;
                        }
                    } catch (error) {
                        console.error('Error loading products:', error);
                        break;
                    }
                }
                // Hide spinner after loading
                loadingSpinner.style.display = 'none';
                if (!productsFound) {
                    productList.innerHTML = '<p class="col-span-full text-center text-gray-500">ูู ูุชู ุงูุนุซูุฑ ุนูู ุฃู ููุชุฌุงุช. ุญุงูู ุฅุถุงูุฉ ุจุนุถ ุงูููุชุฌุงุช ูู ูุฌูุฏ `products`.</p>';
                }
            }

            // --- Cart Logic (mostly unchanged, but adapted for dynamic buttons) ---
            
            function updateCartUI() {
                cartItemsContainer.innerHTML = '';
                if (cart.length === 0) {
                    cartItemsContainer.innerHTML = '<p class="text-gray-500 text-center">ุณูุฉ ุงูุชุณูู ูุงุฑุบุฉ.</p>';
                    checkoutButton.disabled = true;
                    checkoutButton.classList.add('opacity-50', 'cursor-not-allowed');
                } else {
                    checkoutButton.disabled = false;
                    checkoutButton.classList.remove('opacity-50', 'cursor-not-allowed');
                    cart.forEach(item => {
                        const cartItemHTML = `
                            <div class="flex justify-between items-center mb-4 pb-2 border-b">
                                <div>
                                    <h4 class="font-semibold">${item.name}</h4>
                                    <p class="text-sm text-gray-500">${item.price.toFixed(2)} ุฑูุงู x ${item.quantity}</p>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="font-bold">${(item.price * item.quantity).toFixed(2)} ุฑูุงู</span>
                                    <button data-name="${item.name}" class="remove-from-cart-btn text-red-500 hover:text-red-700">&times;</button>
                                </div>
                            </div>`;
                        cartItemsContainer.insertAdjacentHTML('beforeend', cartItemHTML);
                    });
                }
                const total = cart.reduce((sum, item) => sum + item.price * item.quantity, 0);
                cartTotal.textContent = `${total.toFixed(2)} ุฑูุงู`;
                cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
            }

            function addToCart(productName, productPrice) {
                const cartItem = cart.find(item => item.name === productName);
                if (cartItem) {
                    cartItem.quantity++;
                } else {
                    cart.push({ name: productName, price: parseFloat(productPrice), quantity: 1 });
                }
                showSuccessMessage();
                updateCartUI();
            }

            function removeFromCart(productName) {
                cart = cart.filter(item => item.name !== productName);
                updateCartUI();
            }
            
            function showSuccessMessage() {
                successMessage.classList.remove('hidden', 'translate-x-full');
                successMessage.classList.add('translate-x-0');
                setTimeout(() => {
                    successMessage.classList.remove('translate-x-0');
                    successMessage.classList.add('translate-x-full');
                    setTimeout(() => successMessage.classList.add('hidden'), 500);
                }, 2000);
            }
            
            function showOrderConfirmation() {
                orderConfirmation.classList.remove('hidden', 'translate-x-full');
                orderConfirmation.classList.add('translate-x-0');
                setTimeout(() => {
                    orderConfirmation.classList.remove('translate-x-0');
                    orderConfirmation.classList.add('translate-x-full');
                    setTimeout(() => orderConfirmation.classList.add('hidden'), 500);
                }, 3000);
            }

            // ** MODIFIED: Event listener for dynamically added buttons **
            document.body.addEventListener('click', (e) => {
                // Add to cart
                if (e.target.classList.contains('add-to-cart-btn')) {
                    const name = e.target.dataset.name;
                    const price = e.target.dataset.price;
                    if (name && price) {
                        addToCart(name, price);
                    }
                }
                // Remove from cart
                if (e.target.classList.contains('remove-from-cart-btn')) {
                    const name = e.target.dataset.name;
                    if (name) {
                        removeFromCart(name);
                    }
                }
            });

            // --- Modal and Form Event Listeners (unchanged) ---
            cartButton.addEventListener('click', () => cartModal.classList.remove('hidden'));
            closeCartButton.addEventListener('click', () => cartModal.classList.add('hidden'));
            checkoutButton.addEventListener('click', () => {
                cartModal.classList.add('hidden');
                checkoutModal.classList.remove('hidden');
            });
            closeCheckoutButton.addEventListener('click', () => checkoutModal.classList.add('hidden'));
            checkoutForm.addEventListener('submit', (e) => {
                e.preventDefault();
                console.log('Order submitted:', {
                    customer: {
                        name: document.getElementById('name').value,
                        address: document.getElementById('address').value,
                        phone: document.getElementById('phone').value,
                    },
                    items: cart,
                    total: cart.reduce((sum, item) => sum + item.price * item.quantity, 0)
                });
                cart = [];
                updateCartUI();
                checkoutForm.reset();
                checkoutModal.classList.add('hidden');
                showOrderConfirmation();
            });

            // ** Initialize the page **
            loadProducts();
            updateCartUI();
        });
    </script>
</body>
</html>

